<form method="post" action="/figures">
  <p><h2>Figure Name: <input type="text" name="figure[name]" id="figure_name"></h2></p>
  <p><h3>Titles:</h3></p>
  <% Title.all.each do |title| %>
    <p><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %></p>
  <% end %>

  <p>Create New Title: <input type="text" name="title[name]" id="new_title"></p>

  <p><h3>Landmarks:</h3></p>
  <% Landmark.all.each do |landmark| %>
    <p><input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %></p>
  <% end %>

  <p>Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"</p>
  <input type="submit" value="Create New Figure">
</form>
