<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" name="_method" value="patch">
  <p><h2>Figure Name: <input type="text" name="figure[name]" id="figure_name" value="<%= @figure.name %>"></h2></p>
  <p><h3>Titles:</h3></p>
  <% Title.all.each do |title| %>
    <p><input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"><%= title.name %><% 'checked' if @figure.titles.include?(title) %></p>
  <% end %>

  <p>Create New Title: <input type="text" name="title[name]" id="new_title"></p>

  <p><h3>Landmarks:</h3></p>
  <% Landmark.all.each do |landmark| %>
    <p><input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"><%= landmark.name %><% 'checked' if @figure.landmarks.include?(landmark) %></p>
  <% end %>

  <p>Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"></p>
  <input type="submit" value="Edit Figure">
</form>
